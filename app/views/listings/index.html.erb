
<div class="row">
  <% @listings.each do |listing| %>
      <div class="center col-md-3">
	      <div class="thumbnail">
		      <%= link_to image_tag(listing.image.url(:thumb)), listing %>
		      <div class="caption">
		        <h3><%= listing.name %></h3>
		        <p><%= number_to_currency(listing.price) %></p>
		      </div>
		   </div>
	   </div>
   <% end %>
</div>
<br>

<%= link_to 'New Listing', new_listing_path %>
